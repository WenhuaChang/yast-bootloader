global define void enable_opt_dlg(boolean val) ``{
    UI::`ChangeWidget(`id(`delete), `Enabled, val);
    UI::`ChangeWidget(`id(`value), `Enabled, val);
    UI::`ChangeWidget(`id(`set), `Enabled, val);
