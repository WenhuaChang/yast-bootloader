        map names = $[
            "lilo" : "LILO",
            "grub" : "GRUB",
            "silo" : "SILO",
            "milo" : "MILO",
            "aboot" : "aboot",
            "elilo" : "ELILO",
            "mips" : "dvh",
            "s390" : "zipl",
//            "ppc" : _("boot loader")
