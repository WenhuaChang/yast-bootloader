@HEADER-COMMENT@

# neededforbuild  autoconf automake dejagnu expect tcl yast2-core yast2-core-devel yast2-devtools yast2-testsuite

@HEADER@
Requires:	yast2 yast2-lib-sequencer yast2-lib-wizard

Provides:	y2c_bootfloppy yast2-config-lilo yast2-config-bootloader
Obsoletes:	y2c_bootfloppy yast2-config-lilo yast2-config-bootloader

BuildArchitectures: noarch

Summary:	YaST2 Modules for installation

%description
-

@PREP@

@BUILD-YCP@

@INSTALL-YCP@

@CLEAN@

%files
%defattr(-,root,root)

# bootfloppy
@configdir@/menuentry_bootfloppy.y2cc
@clientdir@/bootfloppy.ycp
%doc @docdir@/*

# lilo
%dir @yincludedir@/lilo
@yincludedir@/lilo/*.ycp
@clientdir@/lilo*.ycp
@configdir@/*.y2cc
@moduledir@/Lilo.ycp

#installation
@scrconfdir@/cfg_bootloader.scr
@clientdir@/inst_bootloader.ycp
@clientdir@/proposal_bootloader.ycp
@moduledir@/Boot.ycp

%ifarch ppc ppc64
@ybindir@/ppc_postinstall.sh
@moduledir@/BootPPC.ycp
%endif
%ifarch sparc sparc64
@ybindir@/dosilo
@moduledir@/BootSILO.ycp
%endif
%ifarch ia64
@ybindir@/doelilo
@moduledir@/BootELILO.ycp
%endif
%ifarch alpha
@ybindir@/doaboot
@ybindir@/domilo
@moduledir@/BootMILO.ycp
@moduledir@/BootABOOT.ycp
%endif
%ifarch s390 s390x
@moduledir@/BootS390.ycp
%endif
%ifarch i386 x86_64
@ybindir@/mk_boot_floppy
@ybindir@/mk_lilo_conf
@ybindir@/update_lilo_conf
@ybindir@/dolilo
@moduledir@/BootLILO.ycp
%endif
