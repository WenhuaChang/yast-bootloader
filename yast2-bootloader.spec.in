@HEADER-COMMENT@
# neededforbuild gpp libgpp libxcrypt libxcrypt-devel yast2-devel-packages yast2-storage yast2-installation yast2 yast2-devel openssl openssl-devel

@HEADER@
PreReq:         /bin/sed %fillup_prereq
Requires:	yast2 yast2-core yast2-storage

Provides:	yast2-config-bootfloppy yast2-config-lilo yast2-config-bootloader
Obsoletes:	yast2-config-bootfloppy yast2-config-lilo yast2-config-bootloader
Provides:	yast2-agent-liloconf yast2-agent-prom yast2-trans-bootfloppy
Obsoletes:	yast2-agent-liloconf yast2-agent-prom yast2-trans-bootfloppy
Provides:	yast2-trans-inst-bootloader yast2-trans-lilo yast2-trans-boot
Obsoletes:	yast2-trans-inst-bootloader yast2-trans-lilo yast2-trans-boot
Provides:	y2c_boot y2t_boot
Obsoletes:	y2c_boot y2t_boot
Provides:	y2t_inst-bootloader yast2-agent-liloconf-devel yast2-agent-prom-devel
Obsoletes:	y2t_inst-bootloader yast2-agent-liloconf-devel yast2-agent-prom-devel

Summary:	Bootloader installation and configuration

%description
-


%package -n yast2-bootfloppy
Summary:        Tool for creating boot floppy disks
Group:          System/YaST

%description -n yast2-bootfloppy
-

@PREP@

@BUILD@

@INSTALL@

@CLEAN@

%post
%{fillup_only -n bootloader}

%files
%defattr(-,root,root)

# menu items

%ifnarch s390 s390x
@desktopdir@/bootloader.desktop
%endif

%doc @docdir@

%dir @yncludedir@/bootloader
@yncludedir@/bootloader/*
@moduledir@/*
@clientdir@/bootloader*.ycp
@ybindir@/*

# lilo agent
@plugindir@/libpy2ag_liloconf.so.*
@scrconfdir@/lilo.scr
@scrconfdir@/elilo.scr
@scrconfdir@/silo.scr
@scrconfdir@/grub.scr
@scrconfdir@/zipl.scr
@scrconfdir@/cfg_bootloader.scr
@scrconfdir@/cfg_bootsplash.scr

# lilo agent - devel
@plugindir@/libpy2ag_liloconf.so
@plugindir@/libpy2ag_liloconf.la
%docdir @docdir@

#prom agent - sparc(64) only
%ifarch sparc sparc64
@plugindir@/libpy2ag_prom.so.*
@scrconfdir@/prom.scr
@plugindir@/libpy2ag_prom.so
@plugindir@/libpy2ag_prom.la
%endif

/var/adm/fillup-templates/*

%files -n yast2-bootfloppy
%defattr(-,root,root)

%ifarch %ix86
@desktopdir@/bootfloppy.desktop
%endif
@clientdir@/bootfloppy.ycp
