@HEADER-COMMENT@
# neededforbuild gpp libgpp libxcrypt libxcrypt-devel yast2-devel-packages hwinfo

@HEADER@
Requires:	yast2 yast2-core

Provides:	yast2-config-bootfloppy yast2-config-lilo yast2-config-bootloader yast2-agent-liloconf yast2-agent-prom yast2-trans-bootfloppy yast2-trans-inst-bootloader yast2-trans-lilo
Obsoletes:	yast2-config-bootfloppy yast2-config-lilo yast2-config-bootloader yast2-agent-liloconf yast2-agent-prom yast2-trans-bootfloppy yast2-trans-inst-bootloader yast2-trans-lilo

Summary:	Bootloader installation and configuration

%description
-

@PREP@

@BUILD@

@INSTALL@

@CLEAN@

%files
%defattr(-,root,root)

# bootfloppy
@configdir@/bootfloppy.y2cc
@clientdir@/bootfloppy.ycp
%doc @docdir@/*

# lilo
%dir @yncludedir@/lilo
@yncludedir@/lilo/*.ycp
@clientdir@/lilo*.ycp
@configdir@/lilo.y2cc
@moduledir@/Lilo.ycp

# lilo agent
%dir @plugindir@
@plugindir@/libpy2ag_liloconf.so.*
%dir @scrconfdir@
@scrconfdir@/lilo.scr
@scrconfdir@/elilo.scr
@scrconfdir@/silo.scr
@scrconfdir@/grub.scr

# lilo agent - devel
@plugindir@/libpy2ag_liloconf.so
@plugindir@/libpy2ag_liloconf.la
%docdir @docdir@

#installation
@scrconfdir@/cfg_bootloader.scr
@clientdir@/inst_bootloader.ycp
@clientdir@/proposal_bootloader.ycp
@moduledir@/Boot.ycp

%ifarch ppc ppc64
@ybindir@/ppc_postinstall.sh
@moduledir@/BootPPC.ycp
%endif
%ifarch sparc sparc64
@ybindir@/dosilo
@moduledir@/BootSILO.ycp
# agent-prom
@plugindir@/libpy2ag_prom.so.*
@scrconfdir@/prom.scr
@plugindir@/libpy2ag_prom.so
@plugindir@/libpy2ag_prom.la
%endif
%ifarch ia64
@ybindir@/doelilo
@moduledir@/BootELILO.ycp
%endif
%ifarch alpha
@ybindir@/doaboot
@ybindir@/domilo
@moduledir@/BootMILO.ycp
@moduledir@/BootABOOT.ycp
%endif
%ifarch s390 s390x
@moduledir@/BootS390.ycp
%endif
%ifarch %ix86 x86_64
@ybindir@/mk_boot_floppy
@ybindir@/mk_lilo_conf
@ybindir@/mk_grub_conf
@ybindir@/update_lilo_conf
@ybindir@/dolilo
@ybindir@/dogrub
@moduledir@/BootLILO.ycp
@moduledir@/BootGRUB.ycp
%endif
