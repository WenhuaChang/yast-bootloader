Summary:	Bootloader installation and configuration

%description
-

@PREP@

@BUILD@

@INSTALL@

@CLEAN@

%post
%{fillup_only -n bootloader}

%files
%defattr(-,root,root)

# menu items

%ifnarch s390 s390x
@configdir@/bootfloppy.y2cc
@configdir@/bootloader.y2cc
%endif

%ifarch %ix86 x86_64
@ydatadir@/mbr
%endif


@clientdir@/bootfloppy.ycp

%doc @docdir@

%dir @yncludedir@/bootloader
@yncludedir@/bootloader/*
#%dir @yncludedir@/bootloader/routines
#%dir @yncludedir@/bootloader/grub
#%dir @yncludedir@/bootloader/lilo
#%dir @yncludedir@/bootloader/elilo
#%dir @yncludedir@/bootloader/ppc
#@yncludedir@/bootloader/routines/*.ycp
#@yncludedir@/bootloader/lilo/*.ycp
#@yncludedir@/bootloader/grub/*.ycp
#@yncludedir@/bootloader/elilo/*.ycp
#@yncludedir@/bootloader/ppc/*.ycp
@moduledir@/*.ycp
@clientdir@/*.ycp
@ybindir@/*

# lilo agent
@plugindir@/libpy2ag_liloconf.so.*
@scrconfdir@/lilo.scr
@scrconfdir@/elilo.scr
@scrconfdir@/silo.scr
@scrconfdir@/grub.scr
@scrconfdir@/cfg_bootloader.scr

# lilo agent - devel
@plugindir@/libpy2ag_liloconf.so
@plugindir@/libpy2ag_liloconf.la
%docdir @docdir@

#prom agent - sparc(64) only
%ifarch sparc sparc64
@plugindir@/libpy2ag_prom.so.*
@scrconfdir@/prom.scr
@plugindir@/libpy2ag_prom.so
@plugindir@/libpy2ag_prom.la
%endif

/var/adm/fillup-templates/*
