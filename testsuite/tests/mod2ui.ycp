{
    import "Pkg";
    include "testsuite.ycp";

    map READ_I = $[
        "target" : $[
            "size" : -1,
            "tmpdir" : "/tmp/",
        ],
        "probe" : $[
            "architecture" : "i386",
            "has_apm" : true,
            "has_pcmcia" : false,
            "has_smp" : false,
            "system" : [],
            "memory" : [],
            "cpu" : [],
            "cdrom" : $[
                "manual" : [],
            ],
            "floppy" : $[
                "manual" : [],
            ],
        ],
        "sysconfig" : $[
            "console" : $[
                "CONSOLE_FONT" : "",
                "CONSOLE_SCREENMAP" : "",
                "CONSOLE_UNICODEMAP" : "",
                "CONSOLE_MAGIC" : "",
                "CONSOLE_ENCODING" : "",
            ],
        ],
        "etc" : $[
            "install_inf" : $[
                "Cmdline" : "",
            ],
        ],
        "proc" : $[
            "cpuinfo" : $[
                "value" : $[
                    "0" : $[
                        "flags" : ""
                    ],
                ],
            ],
        ]
    ];

    TESTSUITE_INIT ([READ_I], 0);
    include "bootloader/routines/misc.ycp";
    TESTSUITE_CLEAN ();

    TEST(``(mod2ui("")), [], nil);
    TEST(``(mod2ui("simple_string")), [], nil);    
    TEST(``(mod2ui("unquoted string")), [], nil);
    TEST(``(mod2ui("\"quoted string\"")), [], nil);
    TEST(``(mod2ui("\"  unstripped quoted string \"")), [], nil);
    TEST(``(mod2ui("string with backslash \\\\ and spaces")), [], nil);
    TEST(``(mod2ui("string with escaped \\\" quote")), [], nil);
    TEST(``(mod2ui(5)), [], nil);

}
